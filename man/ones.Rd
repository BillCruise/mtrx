\name{ones}
\alias{ones}
\title{
    Ones Matrix
}
\description{
    Creates a matrix or N-dimensional array whose elements are all 1.
}
\usage{
    ones(m, n = m)
}
\arguments{
  \item{m}{
    number of rows in the matrix
  }
  \item{n}{
    number of columns in the matrix
  }
}
\details{
    If invoked with a single integer argument, creates a square matrix.
}
\value{
    Returns a matrix or N-dimensional array whose elements are all 1.
}
\author{
    Bill Cruise
}
